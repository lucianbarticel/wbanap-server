{
  "name": "anap-screening-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "rm -rf ./dist && tsc",
    "start": "node dist/server",
    "dev": "nodemon",
    "dev:docker": "docker-compose --env-file .env up -d && docker-compose logs -f screening-server",
    "test": "jest --runInBand --silent",
    "lint": "eslint . --ext .ts",
    "decrypt:env": "sops --decrypt .enc.env > .env",
    "migration:create": "npx mikro-orm migration:create",
    "migration:up": "npx mikro-orm migration:up",
    "migration:down": "npx mikro-orm migration:down",
    "migration:list": "npx mikro-orm migration:list",
    "migration:pending": "npx mikro-orm migration:pending",
    "migration:fresh": "npx mikro-orm migration:fresh",
    
    "build:container": "docker build --target production -t anap-screening/server:latest .", 
    "start:cotainer": "docker run --env-file ./env --expose 3000:3000 anap-screening/server:latest",
    "go:container": "yarn build:container && yarn start:container"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.4.2",
    "@mikro-orm/core": "^5.4.2",
    "@mikro-orm/migrations": "^5.4.2",
    "@mikro-orm/postgresql": "^5.4.2",
    "@types/uuid": "^8.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "mikro-orm": {
    "useTsNode": true
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "docker-compose": "^0.23.17",
    "eslint": "^8.25.0",
    "jest": "^29.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1"
  }
}
