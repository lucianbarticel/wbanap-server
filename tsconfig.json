{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers": ["app/controllers"],
      "@controllers/*": ["app/controllers/*"],
      "@services": ["app/services"],
      "@services/*": ["app/services/*"],
      "@mappers": ["app/mappers"],
      "@mappers/*": ["app/mappers/*"],
      "@middlewares": ["app/middlewares"],
      "@middlewares/*": ["app/middlewares/*"],
      "@domain": ["domain/"],
      "@domain/*": ["domain/*"],
      "@repos": ["domain/repos"],
      "@repos/*": ["domain/repos/*"],
      "@server": ["server"],
      "@server/*": ["server/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@persistence": ["persistence"],
      "@persistence/*": ["persistence/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./src/persistence/migrations"]
}